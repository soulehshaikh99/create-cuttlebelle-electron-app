{
  "name": "create-cuttlebelle-electron-app",
  "version": "0.1.0",
  "main": "main.js",
  "author": "Souleh Shaikh <author.souleh@thegeekytutor.com>",
  "license": "MIT",
  "private": false,
  "build": {
    "icon": "public/favicon.png",
    "productName": "Elm and Electron App",
    "files": [
      "site/**/*",
      "!site/favicon.png",
      "main.js"
    ]
  },
  "scripts": {
    "build": "cuttlebelle",
    "watch": "cuttlebelle watch",
    "docs": "cuttlebelle docs",
    "version": "cuttlebelle --version",
    "help": "cuttlebelle help",
    "test": "echo \"Error: no test specified\" && exit 1",
    "electron": "wait-on http://localhost:8080/ && electron .",
    "electron-dev": "concurrently \"yarn run start\" \"yarn run electron\"",
    "preelectron-pack": "yarn run build",
    "electron-pack": "electron-builder"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "electron": "^8.3.0",
    "electron-builder": "^22.6.0",
    "wait-on": "^5.0.0"
  },
  "dependencies": {
    "electron-serve": "^1.0.0"
  }
}
