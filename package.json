{
  "name": "create-cuttlebelle-electron-app",
  "version": "0.1.0",
  "main": "main.js",
  "author": "Souleh Shaikh <author.souleh@thegeekytutor.com>",
  "license": "MIT",
  "private": false,
  "build": {
    "icon": "assets/favicon.png",
    "productName": "Cuttlebelle and Electron App",
    "files": [
      "build/**/*",
      "!build/favicon.png",
      "main.js"
    ]
  },
  "cuttlebelle": {
    "folder": {
      "site": "build/"
    }
  },
  "scripts": {
    "start": "cuttlebelle watch",
    "build": "cuttlebelle",
    "docs": "cuttlebelle docs",
    "version": "cuttlebelle --version",
    "help": "cuttlebelle help",
    "test": "echo \"Error: no test specified\" && exit 1",
    "electron": "wait-on http://localhost:8080/ && electron .",
    "electron-dev": "concurrently \"yarn run start\" \"yarn run electron\"",
    "preelectron-pack": "yarn run build",
    "electron-pack": "electron-builder"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "cuttlebelle": "^1.0.0-alpha.69",
    "electron": "^9.0.0",
    "electron-builder": "^22.7.0",
    "wait-on": "^5.0.0"
  },
  "dependencies": {}
}
